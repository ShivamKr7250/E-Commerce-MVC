@model Company

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row text-center">
            <h2 class="text-primary py-2"> @(Model.Id!=0?"Update":"Create") Company</h2>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Id" hidden />
            <div class="row">
                <div class="col-12">
                    <div class="border p-3">
                        @*<div asp-validation-summary="ModelOnly"></div>*@
                        <div class="mb-3 row">
                            <label asp-for="Name" class="p-1"></label>
                            <input asp-for="Name" class="form-control border-0 shadow" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row">
                            <label asp-for="PhoneNumber" class="p-1"></label>
                            <input asp-for="PhoneNumber" class="form-control border-0 shadow" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row">
                            <label asp-for="StreetAddress" class="p-1"></label>
                            <input asp-for="StreetAddress" class="form-control border-0 shadow" />
                            <span asp-validation-for="StreetAddress" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row">
                            <label asp-for="City" class="p-1"></label>
                            <input asp-for="City" class="form-control border-0 shadow" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row">
                            <label asp-for="State" class="p-1"></label>
                            <input asp-for="State" class="form-control border-0 shadow" />
                            <span asp-validation-for="State" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row">
                            <label asp-for="PostalCode" class="p-1"></label>
                            <input asp-for="PostalCode" class="form-control border-0 shadow" />
                            <span asp-validation-for="PostalCode" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-6 col-md-3">
                                @if (Model.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                }
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Company" asp-action="Index" class="btn btn-outline-secondary border form-control">
                                    Back to List
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts{
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'mentions anchor autolink charmap emoticons lists table visualblocks wordcount checklist mediaembed casechange export pageembed permanentpen footnotes advtemplate advtable advcode editimage tableofcontents mergetags powerpaste tinymcespellchecker autocorrect a11ychecker typography inlinecss',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough| align lineheight | tinycomments | checklist numlist bullist indent outdent',
        });
    </script>
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    
}